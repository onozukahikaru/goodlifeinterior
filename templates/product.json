{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "product_meta": {
          "type": "product_meta",
          "settings": {
            "show_vendor": false,
            "show_sku": false,
            "show_reviews_badge": false,
            "show_share_buttons": false
          }
        },
        "variant_selector": {
          "type": "variant_selector",
          "settings": {
            "selector_mode": "block",
            "color_mode": "block",
            "show_quantity_selector": true,
            "show_taxes_included": false,
            "show_inventory_quantity": false,
            "low_inventory_threshold": 0
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_payment_button": true
          }
        },
        "description": {
          "type": "description",
          "settings": {
            "display_mode": "show_all"
          }
        },
        "6f3520b1-6803-4783-8c8b-bb95874e3d14": {
          "type": "liquid",
          "settings": {
            "title": "動画",
            "liquid": "{% assign media = product.metafields.custom._video.value %}\n{% if media.media_type == 'video' %}\n  {{ media | video_tag: image_size: '300x', controls: true, autoplay: false, width:300, height:auto }}\n{% endif %}",
            "display_mode": "show_all"
          }
        }
      },
      "block_order": [
        "product_meta",
        "variant_selector",
        "buy_buttons",
        "description",
        "6f3520b1-6803-4783-8c8b-bb95874e3d14"
      ],
      "settings": {
        "image_size": "small",
        "enable_video_looping": false,
        "enable_image_zoom": true,
        "zoom_effect": "outside",
        "carousel_effect": "fade"
      }
    },
    "recently-viewed-products": {
      "type": "recently-viewed-products",
      "settings": {
        "title": "最近見た商品",
        "show_quick_buy": true
      }
    }
  },
  "order": [
    "main",
    "recently-viewed-products"
  ]
}
